{% comment %} Hero: text on white + image below (Dawn-native) {% endcomment %}
{{ 'component-hero-text-image.css' | asset_url | stylesheet_tag }}
{{ 'custom-buttons.css' | asset_url | stylesheet_tag }}

<section class="hero-text-image">
    <div class="page-width f f__col fs__c mb__14">
        <div class="text-center f f__col fs__c">
            {% if section.settings.kicker != blank %}
                <p class="caption-with-letter-spacing">{{ section.settings.kicker }}</p>
            {% endif %}

            {% if section.settings.heading != blank %}
                <h1 class="h0 hero-text-image__title">{{ section.settings.heading }}</h1>
            {% endif %}

            {% if section.settings.subheading != blank %}
                <div class="rte hero-text-image__subtitle">{{ section.settings.subheading }}</div>
            {% endif %}

            {% if section.settings.cta_label and section.settings.cta_link %}
                <a href="{{ section.settings.cta_link }}" class="button button--primary hero-text-image__cta">
                    {{ section.settings.cta_label }}
                </a>
            {% endif %}
        </div>

        {% render 'button',
                label: section.settings.cta_label,
                href:  section.settings.cta_link,
                classes: 'mb-14',
                type: 'link',
                icon:  'arrow'
        %}
    </div>

    <div class="hero-text-image__image">
        {% assign desktop = section.settings.image_desktop %}
        {% assign mobile  = section.settings.image_mobile | default: desktop %}

        <picture>
            {% if mobile %}
                <source media="(max-width: 749px)"
                        srcset="{{ mobile | image_url: width: 750 }} 750w, {{ mobile | image_url: width: 1100 }} 1100w"
                        sizes="100vw">
            {% endif %}
            {% if desktop %}
                <img
                        src="{{ desktop | image_url: width: 1600 }}"
                        srcset="{{ desktop | image_url: width: 800 }} 800w,
                  {{ desktop | image_url: width: 1200 }} 1200w,
                  {{ desktop | image_url: width: 1600 }} 1600w,
                  {{ desktop | image_url: width: 2000 }} 2000w"
                        sizes="100vw"
                        alt="{{ section.settings.image_alt | escape }}"
                        loading="eager"
                        fetchpriority="high">
            {% endif %}
        </picture>
    </div>
</section>

{% schema %}
{
  "name": "Hero — text + image",
  "settings": [
    { "type": "text", "id": "kicker", "label": "Kicker (optional)" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "Los Reflejos del río Collection" },
    { "type": "richtext", "id": "subheading", "label": "Subheading", "default": "<p>A perpetual symbol of fascinating metamorphoses and captivating seduction</p>" },
    { "type": "text", "id": "cta_label", "label": "CTA label", "default": "Shop now" },
    { "type": "url",  "id": "cta_link",  "label": "CTA link" },
    { "type": "image_picker", "id": "image_desktop", "label": "Desktop image" },
    { "type": "image_picker", "id": "image_mobile",  "label": "Mobile image (optional)" },
    { "type": "text", "id": "image_alt", "label": "Image alt text" }
  ],
  "presets": [{ "name": "Hero — text + image" }]
}
{% endschema %}
